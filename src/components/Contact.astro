<section id="contact" class="py-24 px-6">
  <div class="max-w-5xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Get In <span class="text-gradient">Touch</span>
      </h2>
      <p class="text-text-muted max-w-xl mx-auto">
        Want to work together or just say hi? I'd love to hear from you. Pick a channel below and let's connect.
      </p>
      <div class="w-20 h-1 bg-gradient-to-r from-primary to-accent rounded-full mx-auto mt-6"></div>
    </div>

    <div class="flex flex-col items-center">
      <div id="orbit-container" class="relative w-[340px] h-[340px] md:w-[420px] md:h-[420px]">
        
        <svg class="absolute inset-0 w-full h-full" viewBox="0 0 420 420" fill="none">
          <circle cx="210" cy="210" r="180" stroke="rgba(99,102,241,0.12)" stroke-width="1" stroke-dasharray="8 6" class="orbit-ring-spin" />
          <circle cx="210" cy="210" r="130" stroke="rgba(6,182,212,0.08)" stroke-width="1" stroke-dasharray="4 8" class="orbit-ring-spin-reverse" />
          <path id="orbit-accent-arc" d="M 210 30 A 180 180 0 0 1 390 210" stroke="url(#orbit-grad)" stroke-width="2" stroke-linecap="round" style="transform-origin: 210px 210px; transition: transform 0.7s cubic-bezier(0.34, 1.56, 0.64, 1);" />
          <defs>
            <linearGradient id="orbit-grad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="#818cf8" stop-opacity="0.6" />
              <stop offset="100%" stop-color="#06b6d4" stop-opacity="0.2" />
            </linearGradient>
          </defs>
        </svg>

        <div class="absolute inset-0 flex items-center justify-center">
          <div id="orbit-center" class="text-center transition-all duration-500 ease-out px-4">
            <div id="orbit-center-icon" class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-primary/15 flex items-center justify-center transition-all duration-500"></div>
            <p id="orbit-center-label" class="text-xs uppercase tracking-widest text-primary-light font-semibold mb-1 transition-all duration-300"></p>
            <p id="orbit-center-value" class="text-sm md:text-base font-medium text-text transition-all duration-300 max-w-[200px]"></p>
            <a id="orbit-center-link" href="#" target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 mt-3 text-xs font-semibold text-primary-light hover:text-accent-light transition-colors">
              <span id="orbit-center-cta"></span>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
            </a>
          </div>
        </div>

        <button id="orbit-node-0" class="orbit-node absolute" data-index="0" aria-label="Email">
          <div class="orbit-node-inner">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
          </div>
          <span class="orbit-node-label">Email</span>
        </button>

        <button id="orbit-node-1" class="orbit-node absolute" data-index="1" aria-label="GitHub">
          <div class="orbit-node-inner">

<section id="home" class="relative min-h-screen flex items-center justify-center px-6 pt-20">
  <div class="max-w-4xl mx-auto text-center">
    <div class="animate-fade-in mb-6">
      <span class="inline-block px-4 py-1.5 text-sm font-medium text-primary-light bg-primary/10 rounded-full border border-primary/20">
        ðŸ‘‹ Welcome to my portfolio
      </span>
    </div>

    <h1 class="animate-slide-up text-5xl md:text-7xl font-extrabold tracking-tight leading-tight mb-6" style="animation-delay: 0.1s">
      Hi, I'm <span class="text-gradient">Aji</span>
    </h1>

    <p class="animate-slide-up text-xl md:text-2xl text-text-muted max-w-2xl mx-auto mb-10 leading-relaxed" style="animation-delay: 0.2s">
      I'm a <span class="text-primary-light font-semibold">full-stack developer</span> who likes building things that actually work. E-commerce platforms, finance dashboards, CLI tools, you name it.
    </p>

    <div class="animate-slide-up flex flex-col sm:flex-row items-center justify-center gap-4" style="animation-delay: 0.3s">
      <a
        href="#projects"
        class="group inline-flex items-center gap-2 px-8 py-3.5 bg-primary hover:bg-primary-dark text-white font-semibold rounded-xl transition-all duration-300 shadow-lg shadow-primary/25 hover:shadow-primary/40 hover:-translate-y-0.5"
      >
        View My Work
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      <a
        href="#contact"
        class="inline-flex items-center gap-2 px-8 py-3.5 glass glass-hover text-text font-semibold rounded-xl transition-all duration-300 hover:-translate-y-0.5"
      >
        Get In Touch
      </a>
    </div>

    <div class="animate-slide-up mt-16 flex flex-wrap justify-center gap-3" style="animation-delay: 0.4s">
      {["TypeScript", "React", "Next.js", "Vue.js", "Laravel", "Go", "Python", "Node.js"].map((tech) => (
        <span class="px-3 py-1 text-xs font-mono text-text-muted bg-surface-light rounded-md border border-border/50">
          {tech}
        </span>
      ))}
    </div>
  </div>

  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-5 h-5 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
